section.review-section.section-style.text-right
	.container
		.row
			.col-12.col-md-6.d-none.d-md-block
				.chief-image
					img(src="images/chief.png", alt="Chief Image", draggable="false")

			.col-12.col-md-6
				+sectionHeader("مراجعة", "ماذا يقولون عنا سادة الطعام")

				.section-body
					.chief-slider
						.slider
							.slider-banner
